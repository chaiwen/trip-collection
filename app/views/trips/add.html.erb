<h1>Editing Trip</h1>

<%= render 'form' %>





<div class="field">
    <h4><strong>Select activities to build this trip:</strong></h4>
    


    <div class="col-md-8">
    <% if @user.activities.any? %>
      <h3>activities (<%= @user.activities.count %>)</h3>
      <ol class="activities">

        <%= f.check_box :activities %>
        <%= render @activities %>
      </ol>
    <% end %>
  </div>


<li id="activity-<%= activity.id %>">
  <%#= link_to gravatar_for(activity.user, size: 50), activity.user %>

  <span class="user"><%#= link_to activity.user.user_name, activity.user %></span>
  <span class="content"><%= activity.description %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(activity.created_at) %> ago.
  </span>
</li>



<%= link_to 'Show', @trip %> |
<%= link_to 'Back', trips_path %>
